<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="270dip"/>
            <gradient
                android:type="linear"
                android:angle="270"
                android:startColor="#5f4b8b"
                android:endColor="#b2edb8" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle" >
            <corners android:radius="270dip"/>
            <gradient
            android:type="linear"
            android:angle="270"
            android:startColor="#5f4b8b"
            android:endColor="#b2edb8" />
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle">
            <corners android:radius="270dip"/>
            <gradient
            android:type="linear"
            android:angle="90"
            android:startColor="#5f4b8b"
            android:endColor="#b2edb8" />
        </shape>
    </item>
</selector>